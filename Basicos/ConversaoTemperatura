#include <iostream>
#include <math.h>
#include <cstdlib>

using namespace std;

float C=0,F=0;

int main(){

    system("cls");
    setlocale(LC_ALL, "Portuguese");
    
    cout<< "Digite a temperatura em °C que deseja converter para Farenheit!"<<endl;
    cin>> C;
    
    F=C*(9/5)+32;
    
    cout<<C<<"°C são equivalentes à: "<<F<<"°F"<<endl;
    system("pause");
    return(0);
}
