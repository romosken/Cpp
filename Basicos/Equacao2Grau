#include "iostream"
#include "math.h"
#include "cstdlib"
using namespace std;

int main() { 
    system("cls");
    setlocale(LC_ALL, "Portuguese");

    float a=0,b=0,c=0,delta=0,x1=0,x2=0;
    
    cout<<"digite o 'A' da função!"<<endl;
    cin>>a;
    cout<<"digite o 'B' da função!(caso não exista digite '0')"<<endl;
    cin>>b;
    cout<<"digite o 'C' da função!(caso não exista digite '0')"<<endl;
    cin>>c;
    
    delta= (b*b)-4*a*c;

    if (delta>0)
    { 
        x1=-b+sqrt(delta)/2*a;
        x2=-b-sqrt(delta)/2*a;
        cout<<"X1= "<<x1<<" e X2= "<<x2<<endl;
    }
    else
    {
        cout<<"o 'delta' da função é negativo, portanto não é possivel continuar a conta! "<<endl<<" 'delta' = "<<delta<<endl;
    }
    
    system("pause");
}
