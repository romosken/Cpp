#include <cstdlib>
#include <iostream>
#include <math.h>

using namespace std;

int main(){ 
    setlocale(LC_ALL, "Portuguese");

    int tecla=0; int a=0, b=0, c=0, d=0;

    menu:
         system("cls");
         cout<<"\nMenu\n1-Executar\n2-Finalizar"<<endl; cin>>tecla;
        switch(tecla){
              case 1: 
                    cout<<"\n\nDigite quatro valores inteiros, para verificar se são divisíveis por 2 e por 3"<<endl;

                    cin>>a>>b>>c>>d;

                    cout<<"\nOs valores divisíveis por 2 e 3 são: "<<endl;

                    if(a%2==0 and a%3==0)
                    {
                        cout<<a<<endl;
                    }

                    if(b%2==0 and b%3==0)
                    {
                        cout<<b<<endl;
                    }

                    if(c%2==0 and c%3==0)
                    {
                        cout<<c<<endl;
                    }

                    if(d%2==0 and d%3==0)
                    {
                        cout<<d<<endl;
                    }

                    break;

              case 2: 
                  exit(0); 
                  break;
        }
       system("pause"); 
       goto menu; 
       return 0; 
}
